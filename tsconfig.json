{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "strict": false,
    "removeComments": true,
    "noLib": false,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "baseUrl": "./"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
